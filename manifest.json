{
  "manifest_version": 3,
  "name": "Thunderbird-ai",
  "description": "Open LLM site with selected text copied.",
  "version": "0.0.1",
  "author": "awtnb",
  "browser_specific_settings": {
    "gecko": {
      "id": "awtnb.thunderbird-ai@example.com",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "experiment_apis": {
    "Helper": {
      "schema": "src/helper.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["Helper"]],
        "script": "src/helper.js"
      }
    }
  },
  "permissions": ["messagesRead", "clipboardWrite", "storage", "activeTab"],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "Open LLM"
  }
}
