{
  "manifest_version": 3,
  "name": "Thunderbird-ai",
  "description": "Open LLM site with selected text copied.",
  "version": "0.0.1",
  "author": "awtnb",
  "browser_specific_settings": {
    "gecko": {
      "id": "awtnb.thunderbird-ai@example.com",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "permissions": ["menus", "activeTab", "clipboardWrite", "storage"],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  }
}
